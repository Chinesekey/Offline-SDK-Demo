<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_45dp">
        <ImageView
            android:id="@+id/ivBack"
            android:src="@mipmap/ic_back"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dimen_16dp"
            android:paddingRight="@dimen/dimen_16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

        <ScrollView
            android:id="@+id/customScrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/fl_bottom"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:layout_height="wrap_content">

                    <include layout="@layout/item_learn_pinyin_bottom_img" />

                    <include layout="@layout/item_learn_pinyin_bottom_audio" />

                    <include layout="@layout/item_learn_pinyin_bottom_git" />

                </LinearLayout>

                <include layout="@layout/item_learn_center_word" />


            </LinearLayout>

        </ScrollView>


</LinearLayout>